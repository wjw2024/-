<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="50dp">
    <!--股票名称，代码-->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2">
        <TextView
            android:id="@+id/health_china_stock_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:text="万科万999"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/health_china_stock_symbol"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:gravity="center"
            android:textSize="18dp"
            android:text="sh600002"
            />
    </LinearLayout>
    <!--现价-->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1">
        <TextView
            android:id="@+id/health_china_now_price"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="20dp"
            android:text="20"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/black"/>
    </LinearLayout>
    <!--涨跌/幅度-->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="2">
        <TextView
            android:id="@+id/health_china_change_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:text="15.36"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/health_china_change_percent"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:gravity="center"
            android:textSize="18dp"
            android:text="0.25"
            />
    </LinearLayout>
    <!--专题-->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1.5">
        <TextView
            android:id="@+id/health_china_theme_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="20dp"
            android:text="医疗投资"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/black"/>
    </LinearLayout>
</LinearLayout>